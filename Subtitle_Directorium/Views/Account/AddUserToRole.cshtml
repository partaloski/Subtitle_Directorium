@model Subtitle_Directorium.Models.AddToRoleModel

<head>
    <link href="@Url.Content("~/Styles/styleCreate.css")" rel="stylesheet" type="text/css" />
</head>
@{
    ViewBag.Title = "AddUserToRole";
}

<h2 class="titlesh2">Add user with email to the role:</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(z => z.role)
        @Html.DropDownListFor(model => model.role, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Add user to role" />
    </div>

}

